{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "CMake: Configure",
			"command": "cmake",
			"args": [
				"-S",
				"${workspaceFolder}",
				"-B",
				"${workspaceFolder}/build",
				"-D",
				"CMAKE_TOOLCHAIN_FILE=/Users/huangzitong/workspace/SDK/vcpkg/scripts/buildsystems/vcpkg.cmake",
				"-D",
				"CMAKE_BUILD_TYPE=Release",
				"-D",
				"CMAKE_CXX_FLAGS=-w",
				"-G",
				"Ninja"
			]
		},
		{
			"type": "shell",
			"label": "CMake: Build",
			"command": "cmake",
			"args": [
				"--build","${workspaceFolder}/build",
				"--config","Release",
				"--target","Rune",
				"-j","8"
			],
			"dependsOn": [
				"CMake: Configure"
			]
			
		}
	]
}